<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boxai.mapper.PostCommentsMapper">

    <resultMap id="BaseResultMap" type="com.boxai.model.entity.PostComments">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="postId" column="post_id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="parentId" column="parent_id" jdbcType="BIGINT"/>
        <result property="rootId" column="root_id" jdbcType="BIGINT"/>
        <result property="commentText" column="comment_text" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isDelete" column="is_delete" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,post_id,user_id,
        comment_text,create_time,update_time,parent_id,root_id
        is_delete
    </sql>
    <delete id="deleteByIds" parameterType="java.util.List">
        update post_comments set is_delete = 1 where post_comments.id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <!--    通过post_id和user_id查询评论数据-->
    <select id="selectByPostIdAndUserIdAndParentId" resultType="long">
        select id
        from post_comments
        where post_id = #{postId,jdbcType=BIGINT}
          and user_id = #{userId,jdbcType=BIGINT}
          and parent_id = #{Id,jdbcType=BIGINT}
    </select>
    <select id="getCommentList" resultType="com.boxai.model.entity.PostComments">
        SELECT * FROM post_comments WHERE post_id = #{postId and is_delete = 0}
    </select>
    <select id="getCommentListTotal" resultType="java.lang.Long">
        SELECT COUNT(*) FROM post_comments WHERE post_id = #{postId}
    </select>

<!--    通过rootId==0 并且 parentId == id作为查询条件，获取id,以此来判断是否为二级目录-->
    <select id="selectByParentId" resultType="long">
        select id
        from post_comments
        where root_id = 0
          and id = #{parentId,jdbcType=BIGINT}
    </select>
<!--    通过id查询-->
    <select id="selectById" resultType="com.boxai.model.entity.PostComments">
        select
        <include refid="Base_Column_List"/>
        from post_comments
        where id = #{id,jdbcType=BIGINT}
    </select>
</mapper>
